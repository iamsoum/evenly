<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evenly.ui.CreateGroupController" stylesheets="@styles.css" styleClass="create-group-container" spacing="20" prefWidth="800" prefHeight="600">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Create New Group" styleClass="page-title"/>

    <!-- Group Details Section -->
    <VBox spacing="10" styleClass="form-section">
        <Label text="Group Name:" styleClass="form-label"/>
        <TextField fx:id="groupNameField" promptText="Enter group name"/>

        <Label text="Description:" styleClass="form-label"/>
        <TextField fx:id="descriptionField" promptText="Enter description (optional)"/>
    </VBox>

    <!-- Add Members Section -->
    <VBox spacing="10" styleClass="form-section">
        <Label text="Add Member by Email:" styleClass="form-label"/>
        
        <HBox spacing="10">
            <TextField fx:id="emailField" promptText="Enter email" HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#handleAddMember" styleClass="primary-button" defaultButton="true"/>
        </HBox>

        <Label text="Members:" styleClass="form-label"/>
        <ListView fx:id="memberListView" prefHeight="200" styleClass="member-list"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Group" onAction="#handleSave" styleClass="primary-button"/>
        <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
    </HBox>
</VBox>
