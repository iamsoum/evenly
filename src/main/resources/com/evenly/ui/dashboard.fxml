                    </HBox>
                </VBox>

                <!-- Groups List -->
                <VBox styleClass="groups-list" HBox.hgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT">
                        <Label text="Groups" styleClass="section-subtitle"/>
