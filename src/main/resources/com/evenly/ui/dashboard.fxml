                            <Label text="Amount" styleClass="summary-value"/>
                        </VBox>
                    </HBox>
                    
                    <ProgressBar progress="0.6" maxWidth="Infinity" styleClass="summary-progress"/>
                    
                    <HBox spacing="10" alignment="CENTER">
