                                <Label text="Fall Semester Trip" styleClass="group-name"/>
                                <Label text="You are Owned $398" styleClass="group-status-owned"/>
                            </VBox>
                        </HBox>
                        <HBox styleClass="group-item" spacing="10" alignment="CENTER_LEFT">
                            <Rectangle width="50" height="50" styleClass="group-icon-placeholder"/>
                            <VBox>
                                <Label text="Housemates" styleClass="group-name"/>
                                <Label text="You owe $10" styleClass="group-status-owe"/>
                            </VBox>
                        </HBox>
                        <HBox styleClass="group-item" spacing="10" alignment="CENTER_LEFT">
                            <Rectangle width="50" height="50" styleClass="group-icon-placeholder"/>
                            <VBox>
                                <Label text="Goa Trip" styleClass="group-name"/>
                                <Label text="Settled Up" styleClass="group-status-settled"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>

