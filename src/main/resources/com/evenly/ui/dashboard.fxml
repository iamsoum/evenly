<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.evenly.ui.DashboardController" stylesheets="@styles.css" styleClass="dashboard-container" prefWidth="800" prefHeight="600">
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" styleClass="header" spacing="10">
        <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
